@model NebulaTravel.ViewModels.Users.UserRegisterViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <title>Register</title>
    <link rel="stylesheet" type="text/css" href="/styles/form.min.css" />
</head>
<body>
    <main>
        @Html.Partial("_Header")
        <article style="height:100vh">
            <div class="container">
                <div class="img-container" style='background-image: url("../images/sh.jpg")'></div>
                <div class="h-container">
                    <h1>Create an account</h1>
                </div>
                <div class="text-container">
                    <section>
                        <form asp-controller="User" asp-action="Register" method="post">
                            @if (!Model.EmailAvailable)
                            {
                                <p style="color: red; margin-bottom: 10px;">Email address you entered is already registered</p>
                            }
                            Full Name:
                            <input type="text" required
                                   id="FullName" name="FullName" value="" placeholder="John Smith"
                                   pattern="(^[A-Z][a-z]*(-|\s)[A-Z][a-z]*$)" title="FirstName LastName"/> <br>
                            Email:
                            <input type="email" required
                                   id="Email" name="Email" value="" placeholder="john.smith@gmail.com" /> <br>
                            Password:
                            <input type="password" required pattern=".{4,}" title="4 characters minimum"
                                   id="Password" name="Password" /><br>
                            <button type="submit">Register</button>
                        </form>
                    </section>
                </div>
            </div>
            <button id="scrollToTopButton"> Up </button>
        </article>
        <div id="space"></div>
    </main>
</body>
@Html.Partial("ViewScripts")
</html>
@model NebulaTravel.ViewModels.Users.UserLoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <title>Log in</title>
    <link rel="stylesheet" type="text/css" href="/styles/basic.min.css" />
    <link rel="stylesheet" type="text/css" href="/styles/form.min.css" />
</head>
<body>
    <main>
        @Html.Partial("_Header")
        <article style="height:100vh">
            <div class="container">
                <div class="img-container" style='background-image: url("../images/sh.jpg")'></div>
                <div class="h-container">
                    <h1>Log in</h1>
                </div>
                <div class="text-container">
                    <section>
                        @if (Model.IncorrectLoginData)
                        {
                        <p style="color: red; margin-bottom: 10px;">Incorrect email or password</p>
                        }
                        <form asp-controller="User" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl" method="post">
                            Email:
                            <input type="email" required
                                   id="Email" name="Email" value="" placeholder="john.smith@gmail.com" /> <br>
                            Password:
                            <input type="password" required
                                   id="Password" name="Password" /><br>
                            <button type="submit">Log in</button>
                        </form>
                        <a href="Register" style="text-align:left">Create an account</a>
                    </section>
                </div>
            </div>
            <button id="scrollToTopButton"> Up </button>
        </article>
        <div id="space"></div>
    </main>
</body>
@Html.Partial("ViewScripts")
</html>
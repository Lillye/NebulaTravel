@model NebulaTravel.Models.Spaceship

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <title>@Model.Name</title>
    <link rel="stylesheet" type="text/css" href="/styles/basic.min.css" />
    <link rel="stylesheet" type="text/css" href="/styles/spaceships.min.css" />
</head>
<body>
    <main>
        @Html.Partial("_Header")
        <article>
            <div class="container">
                <div class="img-container" style='background-image: url("../images/spaceships/@Model.Picture");'></div>
                <div class="h-container">
                    <h1>@Model.Name</h1>
                </div>
                <div class="text-container">
                    <section>
                        <p>
                            @Model.Description
                        </p>
                    </section>
                    <div id="table">
                        <div id="col-left">
                            <ul style="list-style-type: square;">
                                <li>Constructor:</li>
                                <li>Crew Capacity:</li>
                                <li>Passenger Capacity:</li>
                                <li>Length:</li>
                                <li>Total Mass:</li>
                                <li>Engines:</li>
                                <li>First Launch:</li>
                            </ul>
                        </div>
                        <div id="col-right">
                            <ul style="list-style-type: none;">
                                <li>@Model.Constructor</li>
                                <li>@Model.CrewCapacity</li>
                                <li>@Model.PassengerCapacity</li>
                                <li>@Model.Length</li>
                                <li>@Model.TotalMass</li>
                                <li>@Model.Engines</li>
                                <li>@Model.FirstLaunch.ToShortDateString()</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <button id="scrollToTopButton">Up</button>
        </article>
        <div id="space"></div>
    </main>
</body>
@Html.Partial("ViewScripts")
</html>
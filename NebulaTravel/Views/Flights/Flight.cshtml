@model NebulaTravel.ViewModels.Flights.FlightsFlightViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="/images/favicon.png">
    <title>@Model.Flight.Name</title>
    <link rel="stylesheet" type="text/css" href="/styles/flight.min.css" />
</head>
<body>
    <main>
        @Html.Partial("_Header")
        <article>
            <div class="container">
                <div class="img-container" style='background-image: url("/images/a1.jpg");'></div>
                <div class="h-container">
                    <h1>@Model.Flight.Name</h1>
                </div>
                <div class="text-container">
                    <section>
                        <p>
                            Date: @Model.Flight.Date.Date.ToShortDateString()
                            <br><br>
                            @Model.Flight.Description
                        </p>
                        @{ 
                            if (Model.TicketsAvailable)
                            {
                                <a href="/User/Book?=@Model.Flight.FlightId">Book Flight</a>
                            }
                        }
                    </section>
                </div>
            </div>
            <button id="scrollToTopButton">Up</button>
        </article>
        <div id="space"></div>
    </main>
</body>
@Html.Partial("ViewScripts")
</html>